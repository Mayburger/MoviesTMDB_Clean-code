<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <data>

        <import type="android.view.View" />

        <variable
            name="movies"
            type="com.nacoda.moviesmvpdagger2rxjava.models.Movies" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dove_black">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeMovies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/layoutDetail"
                        android:layout_width="match_parent"
                        android:layout_height="330dp"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior">

                        <RelativeLayout
                            android:id="@+id/header"
                            android:layout_width="match_parent"
                            android:layout_height="330dp">

                            <ImageView
                                android:id="@+id/movies_main_backdrop_image_view"
                                android:layout_width="match_parent"
                                android:layout_height="330dp"
                                android:background="@color/dove_black" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_alignParentBottom="true"
                                android:src="@drawable/gradient" />
                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/header"
                            android:layout_margin="@dimen/dimen_8dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="150dp"
                                android:background="@color/colorPrimary"
                                android:padding="20dp"
                                android:src="@drawable/actor" />

                            <ImageView
                                android:id="@+id/movies_main_poster_image_view"
                                android:layout_width="100dp"
                                android:layout_height="150dp" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_margin="16dp"
                                android:layout_toRightOf="@id/movies_main_poster_image_view">

                                <com.nacoda.moviesmvpdagger2rxjava.fonts.RobotoBold
                                    android:id="@+id/movies_main_title_text_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="20sp"
                                    tools:text="Captain America" />

                                <com.nacoda.moviesmvpdagger2rxjava.fonts.RobotoRegular
                                    android:id="@+id/movies_main_release_date_text_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/movies_main_title_text_view"
                                    android:layout_marginTop="4dp"
                                    android:textColor="@color/colorWhite"
                                    tools:text="14-01-2001" />

                                <com.nacoda.moviesmvpdagger2rxjava.fonts.RobotoLight
                                    android:id="@+id/movies_main_genre_text_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/movies_main_release_date_text_view"
                                    android:textColor="@color/colorWhite"
                                    tools:text="Genre" />

                                <RatingBar
                                    android:id="@+id/movies_main_vote_average_rating_bar"
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/movies_main_genre_text_view"
                                    android:isIndicator="true"
                                    android:numStars="5"
                                    android:stepSize="0.1"
                                    android:theme="@style/RatingBar" />

                            </RelativeLayout>

                        </RelativeLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp" />

                    </RelativeLayout>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        app:cardBackgroundColor="@color/colorPrimary"
                        app:cardCornerRadius="@dimen/dimen_8dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.nacoda.moviesmvpdagger2rxjava.fonts.RobotoBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dimen_8dp"
                                android:text="@string/popular"
                                android:textColor="@color/colorWhite"
                                android:textSize="30sp" />

                            <com.nacoda.moviesmvpdagger2rxjava.fonts.RobotoLight
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_margin="@dimen/dimen_16dp"
                                android:text="@string/see_all"
                                android:textColor="@color/colorWhite"
                                android:textSize="15sp" />

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_popular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        app:cardBackgroundColor="@color/colorPrimary"
                        app:cardCornerRadius="@dimen/dimen_8dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.nacoda.moviesmvpdagger2rxjava.fonts.RobotoBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dimen_8dp"
                                android:text="@string/top_rated"
                                android:textColor="@color/colorWhite"
                                android:textSize="30sp" />

                            <com.nacoda.moviesmvpdagger2rxjava.fonts.RobotoLight
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_margin="@dimen/dimen_16dp"
                                android:text="@string/see_all"
                                android:textColor="@color/colorWhite"
                                android:textSize="15sp" />

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_toprated"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </ScrollView>

        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>


</layout>