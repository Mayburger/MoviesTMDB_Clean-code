<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_movies_main_content_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_8dp">


        <android.support.v7.widget.CardView
            android:id="@+id/list_movies_main_poster_card"
            android:layout_width="120dp"
            android:layout_height="175dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:transitionName="name"
            android:elevation="@dimen/dimen_2dp"
            app:cardBackgroundColor="@color/colorImagePlaceholder"
            app:cardCornerRadius="@dimen/dimen_8dp"
            app:cardElevation="@dimen/dimen_4dp"
            app:cardUseCompatPadding="true" />

        <TextView
            android:id="@+id/list_movies_main_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/list_movies_main_poster_card"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_32dp"
            android:layout_toEndOf="@id/list_movies_main_poster_card"
            android:elevation="@dimen/dimen_2dp"
            android:fontFamily="@font/roboto_black"
            android:text="@string/d_movie_name"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/list_movies_main_genre_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_movies_main_title_text_view"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:layout_toEndOf="@id/list_movies_main_poster_card"
            android:fontFamily="@font/roboto"
            android:text="@string/genres"
            android:textSize="@dimen/text_14sp" />

        <TextView
            android:id="@+id/list_movies_main_year_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_movies_main_genre_text_view"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:layout_toEndOf="@id/list_movies_main_poster_card"
            android:fontFamily="@font/roboto_light"
            android:text="@string/year"
            android:textSize="@dimen/text_12sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="@dimen/dimen_8dp"
        android:layout_marginStart="@dimen/dimen_8dp"
        android:background="@color/light_grey" />


</LinearLayout>