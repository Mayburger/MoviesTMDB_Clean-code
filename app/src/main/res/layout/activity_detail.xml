<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="movies"
            type="com.nacoda.moviesmvpdagger2rxjava.models.Movies" />

        <variable
            name="detail"
            type="com.nacoda.moviesmvpdagger2rxjava.models.Detail" />

        <variable
            name="settings"
            type="com.nacoda.moviesmvpdagger2rxjava.models.Settings" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dove_black">

        <RelativeLayout
            android:id="@+id/activity_detail_content_relative_layout"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/activity_detail_header_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/activity_detail_backdrop_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    app:backdrop="@{movies.backdrop_path}"
                    android:layout_centerVertical="true"
                    android:background="@color/dove_black" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/gradient" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/dimen_16dp">

                    <com.nacoda.moviesmvpdagger2rxjava.fonts.RobotoBold
                        android:id="@+id/activity_detail_title_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{movies.title}"
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                    <com.nacoda.moviesmvpdagger2rxjava.fonts.RobotoLight
                        android:id="@+id/activity_detail_tagline_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{detail.tagline}"
                        android:visibility="@{settings.visibility}"
                        android:layout_below="@id/activity_detail_title_text_view"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <RatingBar
                        android:id="@+id/activity_detail_vote_average_rating_bar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/activity_detail_tagline_text_view"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:rating="@{movies.vote_average}"
                        android:stepSize="0.1"
                        android:theme="@style/RatingBar" />

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/activity_runtime_linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_detail_header_layout"
                android:layout_margin="@dimen/dimen_16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/activity_detail_runtime_icon_image_view"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/time" />

                <com.nacoda.moviesmvpdagger2rxjava.fonts.RobotoLight
                    android:id="@+id/activity_detail_runtime_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{detail.runtime}"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_runtime_linear_layout"
                android:orientation="vertical">

                <com.nacoda.moviesmvpdagger2rxjava.fonts.RobotoRegular
                    android:id="@+id/activity_detail_overview_title_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_16dp"
                    android:text="@string/storyline"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <com.nacoda.moviesmvpdagger2rxjava.fonts.RobotoLight
                    android:id="@+id/activity_detail_overview_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_16dp"
                    android:text="@{movies.overview}"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/activity_detail_trailers_linear_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:orientation="vertical">

                        <com.nacoda.moviesmvpdagger2rxjava.fonts.RobotoRegular
                            android:id="@+id/activity_detail_trailers_title_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_16dp"
                            android:layout_marginTop="@dimen/dimen_8dp"
                            android:text="@string/trailers"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/activity_detail_rv_trailers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_8dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/activity_detail_similar_linear_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimaryDark"
                        android:orientation="vertical">

                        <com.nacoda.moviesmvpdagger2rxjava.fonts.RobotoRegular
                            android:id="@+id/activity_detail_similar_title_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_16dp"
                            android:layout_marginTop="@dimen/dimen_8dp"
                            android:text="@string/similar"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/activity_detail_rv_similar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_8dp" />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>

    </ScrollView>


</layout>