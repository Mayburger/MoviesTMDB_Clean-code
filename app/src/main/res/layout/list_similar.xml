<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="175dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_8dp"
        app:cardBackgroundColor="@color/charcoal"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="175dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/list_movies_poster_image_view"
                android:layout_width="175dp"
                android:layout_height="280dp"
                android:scaleType="centerCrop"
                android:background="@color/colorImagePlaceholder"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/list_movies_poster_image_view"
                android:layout_margin="8dp">

                <com.nacoda.moviesmvpdagger2rxjava.fonts.RobotoBold
                    android:id="@+id/list_movies_title_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <com.nacoda.moviesmvpdagger2rxjava.fonts.RobotoLight
                    android:id="@+id/list_movies_genres_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/list_movies_title_text_view"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RelativeLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>